<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_play"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b3"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="rtc.phornthip.chutima.treasuvehumtmath.PlayActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/you3"
        android:id="@+id/imageView22"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="20dp"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/you2"
        android:id="@+id/imageView21"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="110dp"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/you3"
        android:id="@+id/imageView19"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="180dp"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/you2"
        android:id="@+id/imageView18"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="250dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginTop="350dp"
        android:background="@drawable/cir"
        android:clickable="true"
        android:gravity="center_vertical|center_horizontal"
        android:text="10"
        android:textSize="30sp" />


    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score = 0"
        android:textSize="40sp"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 + 20 ="
        android:textSize="40sp"
        android:textColor="@android:color/background_dark"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginTop="31dp"
        android:background="@drawable/cir"
        android:clickable="true"
        android:gravity="center_vertical|center_horizontal"
        android:text="10"
        android:textSize="30sp"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:background="@drawable/cir"
        android:clickable="true"
        android:gravity="center_vertical|center_horizontal"
        android:text="10"
        android:textSize="30sp"
        android:layout_marginBottom="18dp"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toRightOf="@+id/imageView20"
        android:layout_toEndOf="@+id/imageView20" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30sec"
        android:textSize="36sp"
        tools:textColor="@android:color/holo_red_dark"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/you2"
        android:id="@+id/imageView20"
        android:layout_below="@+id/textView4"
        android:layout_toStartOf="@+id/textView7"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/imageView19"
        android:layout_alignEnd="@+id/imageView19" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/you3"
        android:id="@+id/imageView10"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/imageView18"
        android:layout_alignStart="@+id/imageView18"
        android:visibility="invisible" />


</RelativeLayout>
